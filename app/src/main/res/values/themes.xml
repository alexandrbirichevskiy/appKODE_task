<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppKodeTask" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="some_id">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#050510</item>
    </style>

    <style name="title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/title_color_text_view</item>
    </style>

    <style name="al">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#97979B</item>
    </style>

    <style name="designer">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#55555C</item>
    </style>

    <style name="detail">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#97979B</item>
    </style>

    <style name="server_error_title">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/title_color_text_view</item>
    </style>

    <style name="server_error_headline">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#97979B</item>
    </style>

    <style name="server_error_refresh">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#6534FF</item>
    </style>

    <style name="tab_style" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/user_item_conteiner_background_color</item>
    </style>
</resources>